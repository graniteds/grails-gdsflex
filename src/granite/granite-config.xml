<granite-config>

    <classgetter type="org.granite.hibernate.HibernateClassGetter"/>
    
    <externalizers>
    	<configuration>
    		<dynamicclass>true</dynamicclass>
    	</configuration>
        <externalizer type="org.granite.hibernate.HibernateExternalizer">
            <include annotatedwith="javax.persistence.Entity"/>
            <include annotatedwith="javax.persistence.MappedSuperclass"/>
            <include annotatedwith="javax.persistence.Embeddable"/>
        </externalizer>
    </externalizers>
    
    <descriptors>
    	<descriptor instanceof="javax.persistence.Entity" java="org.granite.messaging.amf.io.util.DefaultGroovyClassDescriptor"/>
    </descriptors>

    <!-- Uncomment to enable Spring security integration
	<security type="org.granite.messaging.service.security.SpringSecurityService"/>
     !-->
	
    <!--
     ! Enable Spring components for Tide by annotation
     !-->
    <tide-components>
		<component annotatedwith="org.granite.tide.annotations.TideEnabled"/>
    </tide-components>

</granite-config>
